@model IEnumerable<SmartTech.Models.shipping>

@{
    ViewBag.Title = "Shipping";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <!-- Add Shipping Form -->@*
    <div class="col-xl-5 col-lg-5">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Shipping</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("AddShipping", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="basic-form">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Location</label>
                            <div class="col-sm-9">
                                @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Inside Dhaka..." })
                                @Html.ValidationMessage("name", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Price</label>
                            <div class="col-sm-9">
                                @Html.TextBox("price", null, new { @class = "form-control", placeholder = "Price" })
                                @Html.ValidationMessage("price", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row" style="justify-content: center;">
                            <button class="btn btn-primary" type="submit">Add Shipping</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>*@

    <!-- Shipping List Table -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Shipping Areas</h4>
            </div>
            <div class="card-body">
                @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-info">No shipping areas available.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-responsive-md">
                            <thead>
                                <tr>
                                    <th class="width80">#</th>
                                    <th>Shipping Areas</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><strong>@item.id</strong></td>
                                        <td>@item.name</td>
                                        <td>@item.price.ToString("N2") BDT</td>

                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn btn-success light sharp" data-toggle="dropdown">
                                                    <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1">
                                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                            <rect x="0" y="0" width="24" height="24"></rect>
                                                            <circle fill="#000000" cx="5" cy="12" r="2"></circle>
                                                            <circle fill="#000000" cx="12" cy="12" r="2"></circle>
                                                            <circle fill="#000000" cx="19" cy="12" r="2"></circle>
                                                        </g>
                                                    </svg>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="@Url.Action("DeleteShipping", "Admin", new { id = item.id })" onclick="return confirm('Are you sure you want to delete this shipping area?');">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
