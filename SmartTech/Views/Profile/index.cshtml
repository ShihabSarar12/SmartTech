
@{
    ViewBag.Title = "Profile";
    string name = ViewBag?.User?.name;
    string email = ViewBag?.User?.email;
    string number = ViewBag?.User?.number;
    string image_url = ViewBag?.User?.image_url;
}
<!-- ======================= Top Breadcrubms ======================== -->
<div class="gray py-3">
    <div class="container">
        <div class="row">
            <div class="colxl-12 col-lg-12 col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">My Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ======================= Top Breadcrubms ======================== -->
<!-- ======================= Dashboard Detail ======================== -->
<section class="middle">
    <div class="container">
        <div class="row align-items-start justify-content-between">

            <div class="col-12 col-md-12 col-lg-4 col-xl-4 text-center miliods">
                <div class="d-block border rounded mfliud-bot">
                    <div class="dashboard_author px-2 py-5">
                        @if(image_url != null)
                        {
                            <div class="dash_auth_thumb circle p-1 border d-inline-flex mx-auto mb-2">
                                <img src="@Url.Content(image_url)" class="img-fluid circle" width="100" alt="" />
                            </div>
                        }
                        <div class="dash_caption">
                            <h4 class="fs-md ft-medium mb-0 lh-1">@name</h4>
                            <span class="text-muted smalls">@email</span>
                        </div>
                    </div>

                    <div class="dashboard_author">
                        <h4 class="px-3 py-2 mb-0 lh-2 gray fs-sm ft-medium text-muted text-uppercase text-left">Dashboard Navigation</h4>
                        <ul class="dahs_navbar">
                            <li><a href="@Url.Action("Orders", "Profile")"><i class="lni lni-shopping-basket mr-2"></i>My Order</a></li>
                            <li><a href="@Url.Action("Wishlist", "Profile")"><i class="lni lni-heart mr-2"></i>Wishlist</a></li>
                            <li><a href="" class="active"><i class="lni lni-user mr-2"></i>Profile Info</a></li>
                            <li><a href="@Url.Action("Logout", "Profile")"><i class="lni lni-power-switch mr-2"></i>Log Out</a></li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="col-12 col-md-12 col-lg-8 col-xl-8">
                <!-- row -->
                <div class="row align-items-center">
                    <form class="row m-0" enctype="multipart/form-data" action="@Url.Action("Edit", "Profile")" method="post">
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="small text-dark ft-medium">First Name *</label>
                                <input type="text" name="name" class="form-control" placeholder="@name" />
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="small text-dark ft-medium">Email ID *</label>
                                <input type="text" name="email" class="form-control" placeholder="@email" />
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="small text-dark ft-medium">Current Password *</label>
                                <input type="password" name="confirm_password" class="form-control" placeholder="Current Password" />
                            </div>
                            <h6 class="text-danger">@Session["match"]</h6>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="small text-dark ft-medium">New Password *</label>
                                <input type="password" name="password" class="form-control" placeholder="New Password" />
                            </div>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="small text-dark ft-medium">Number</label>
                                <input type="text" name="number" class="form-control" placeholder="@number" />
                            </div>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="small text-dark ft-medium">Profile Image</label>
                                <input name="uploaded_file" type="file" class="form-control" />
                            </div>
                        </div>
                        <h4 class="text-danger">@ViewBag.Match</h4>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-dark">Save Changes</button>
                            </div>
                        </div>
                    </form>
                    <h4 class="text-danger">@ViewBag.Match</h4>
                </div>
                <!-- row -->
            </div>

        </div>
    </div>
</section>

